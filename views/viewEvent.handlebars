<div class="events">
    <div class="event-page">
        <a href="/">Voltar</a>
        <h1>{{event.name}}</h1>
        <img src="{{event.image}}" alt="{{event.name}}">
        <p><span>Preço:</span> R${{event.price}}</p>
        <p><span>Descrição:</span> {{event.description}}</p>
    </div>
    <div class="actions-event">
        <a href="/edit/{{event._id}}"><button class="btnProduct-edit">Editar</button></a>
        <form action="/remove/{{event._id}}" method="POST">
            <input type="submit" value="Remover" class="btnProduct-remove">
        </form>
    </div>
</div>